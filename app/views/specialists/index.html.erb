<p id="notice"><%= notice %></p>

<h1>Listing Specialists</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Lastname</th>
      <th>Dob</th>
      <th>Gender</th>
      <th>Speciality</th>
      <th>Address</th>
      <th>City</th>
      <th>State</th>
      <th>Country</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @specialists.each do |specialist| %>
      <tr>
        <td><%= specialist.name %></td>
        <td><%= specialist.lastname %></td>
        <td><%= specialist.dob %></td>
        <td><%= specialist.gender %></td>
        <td><%= specialist.speciality_id %></td>
        <td><%= specialist.address %></td>
        <td><%= specialist.city %></td>
        <td><%= specialist.state %></td>
        <td><%= specialist.country %></td>
        <td><%= link_to 'Show', specialist %></td>
        <td><%= link_to 'Edit', edit_specialist_path(specialist) %></td>
        <td><%= link_to 'Destroy', specialist, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

